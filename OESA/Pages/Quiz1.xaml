<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OESA.Pages"
             x:Class="OESA.Pages.Quiz1"
             Title="Quiz1">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <CollectionView ItemsSource="{Binding CurrentQuestion}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Padding="10">
                            <Label Text="{Binding QuestionText}" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               HorizontalTextAlignment="Start" />

                            <VerticalStackLayout 
                            BindableLayout.ItemsSource="{Binding Options}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <RadioButton 
                                            Content="{Binding .}" 
                                            GroupName="{Binding Source={RelativeSource AncestorType={x:Type local:QuestionItem}}, Path=QuestionText}" 
                                            IsChecked="{Binding Source={RelativeSource AncestorType={x:Type local:QuestionItem}}, 
                                                               Path=SelectedAnswer, 
                                                               Converter={StaticResource Converter}, 
                                                               ConverterParameter={Binding .}, 
                                                               Mode=TwoWay}" />

                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Submit" 
                Clicked="OnSubmit"
                WidthRequest="300" 
                HeightRequest="100" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>