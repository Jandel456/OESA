<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OESA.Pages.StudentInfo"
             Title="StudentInfo">
    
    <VerticalStackLayout Padding="20" Spacing="10">

        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <HorizontalStackLayout Grid.Row="0" HorizontalOptions="End">
                <Label x:Name="UserLabel"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="DarkSlateGray" />
            </HorizontalStackLayout>
        </Grid>
        
        <Label Text="User Info" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <Label Text="Full Name:" FontAttributes="Bold"/>
        <Label x:Name="UserNameLabel" />

        <Label Text="First Name:" FontAttributes="Bold"/>
        <Label x:Name="FirstNameLabel" />

        <Label Text="Last Name:" FontAttributes="Bold"/>
        <Label x:Name="LastNameLabel" />

        <Label Text="Email:" FontAttributes="Bold"/>
        <Label x:Name="EmailLabel" />

        <Label Text="User ID:" FontAttributes="Bold"/>
        <Label x:Name="IDLabel" />
    </VerticalStackLayout>
</ContentPage>